package main

import "fmt"
func main() {
	fmt.Println("Калькулятор опыта")
	fmt.Println("===================")
 	
  fmt.Println("Введите количество полученных очков опыта")
	var exp int
	fmt.Scan(&exp)

  
  if exp >= 5000 {
    fmt.Println("Ваш уровень 4")
    } else if exp >= 2500 { 
    fmt.Println("Ваш уровень 3")
      } else if exp >= 1000 { 
      fmt.Println("Ваш уровень 2")
      } else {
      fmt.Println("Ваш уровень 1")
      }
  }